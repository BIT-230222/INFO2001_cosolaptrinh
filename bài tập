using System;
class Program {
    static void Main() {
        Console.Write("Please enter an integer: ");
        int number = int.Parse(Console.ReadLine());
        double doubleNumber = (double)number;
         Console.WriteLine($"The number you entered is {number} and as a double is {doubleNumber}");
    }
}

using System;

class Program {
    static void Main() {
        // Prompt user for a real number input
        Console.Write("Please enter a real number: ");
        double number = double.Parse(Console.ReadLine())
        // Cast double to int and long
        int intNumber = (int)number;
        long longNumber = (long)number; 
        // Output the results
        Console.WriteLine($"The number you entered is {number}, as an int is {intNumber} and as a long is {longNumber}");
    }
}

using System;
class Program {
    static void Main() {
        Console.Write("Please enter a character: ");
        char charInput = Console.ReadLine()[0];
        int asciiCode = (int)charInput;
        Console.WriteLine($"The character you entered is '{charInput}', its ASCII code is {asciiCode}");
    }
}

using System;
class Program
{
    static void Main()
    {
        Console.WriteLine("Nhập các phần tử của mảng, cách nhau bởi dấu phẩy:");
        string input = Console.ReadLine();
        string[] inputs = input.Split(',');
        int[] array = new int[inputs.Length];

        for (int i = 0; i < inputs.Length; i++)
        {
            array[i] = int.Parse(inputs[i].Trim());
        }

        int maxValue = array[0];
        for (int i = 1; i < array.Length; i++)
        {
            if (array[i] > maxValue)
            {
                maxValue = array[i];
            }
        }
       Console.WriteLine("Giá trị lớn nhất trong mảng là: " + maxValue);
    }
}
