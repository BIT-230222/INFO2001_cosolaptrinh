a
#include <stdio.h>

int main() {
    double arr[8];
    double sum = 0;

    printf("Nhap 8 so thuc: ");
    for (int i = 0; i < 8; i++) {
        scanf("%lf", &arr[i]);
        sum += arr[i];
    }

    double average = sum / 8;
    printf("Trung binh cong cua cac so trong mang: %.2f\n", average);

    return 0;
}
b
using System;

class Program {
    static void Main(string[] args) {
        double[] arr = new double[8];

        Console.Write("Nhap 8 so thuc: ");
        for (int i = 0; i < 8; i++) {
            arr[i] = double.Parse(Console.ReadLine());
        }

        double max = arr[0];
        double min = arr[0];

        for (int i = 1; i < 8; i++) {
            if (arr[i] > max) {
                max = arr[i];
            }
            if (arr[i] < min) {
                min = arr[i];
            }
        }

        Console.WriteLine("Gia tri lon nhat: " + max);
        Console.WriteLine("Gia tri nho nhat: " + min);
    }
}
